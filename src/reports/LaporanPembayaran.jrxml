<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="LaporanPembayaran"
              pageWidth="842" pageHeight="595"
              orientation="Landscape"
              columnWidth="802"
              leftMargin="20" rightMargin="20"
              topMargin="20" bottomMargin="20">

    <field name="ID Bayar"          class="java.lang.Object"/>
    <field name="ID Siswa"          class="java.lang.Object"/>
    <field name="Nama Siswa"        class="java.lang.Object"/>
    <field name="Kelas"             class="java.lang.Object"/>
    <field name="Jurusan"           class="java.lang.Object"/>
    <field name="Jenis Pembayaran"  class="java.lang.Object"/>
    <field name="Jumlah"            class="java.lang.Object"/>

    <!-- ==================== TITLE ==================== -->
    <title>
        <band height="55">
            <staticText>
                <reportElement x="0" y="0" width="802" height="35"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="16" isBold="true"/>
                </textElement>
                <text><![CDATA[LAPORAN PEMBAYARAN SPP SMP JAKENAN]]></text>
            </staticText>
            <textField pattern="dd MMMM yyyy">
                <reportElement x="0" y="35" width="802" height="20"/>
                <textElement textAlignment="Center">
                    <font fontName="Arial" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- ==================== COLUMN HEADER ==================== -->
    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement x="0"   y="0" width="60"  height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[ID Bayar]]></text>
            </staticText>
            <staticText>
                <reportElement x="60"  y="0" width="80"  height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[ID Siswa]]></text>
            </staticText>
            <staticText>
                <reportElement x="140" y="0" width="160" height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Nama Siswa]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="0" width="60"  height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Kelas]]></text>
            </staticText>
            <staticText>
                <reportElement x="360" y="0" width="120" height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Jurusan]]></text>
            </staticText>
            <staticText>
                <reportElement x="480" y="0" width="130" height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Jenis Pembayaran]]></text>
            </staticText>
            <staticText>
                <reportElement x="610" y="0" width="192" height="25" backcolor="#4472C4" forecolor="white" mode="Opaque"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Jumlah (Rp)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- ==================== DETAIL ==================== -->
    <detail>
        <band height="20">
            <textField isBlankWhenNull="true">
                <reportElement x="0"   y="0" width="60"  height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ID Bayar}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="60"  y="0" width="80"  height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{ID Siswa}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="140" y="0" width="160" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{Nama Siswa}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="300" y="0" width="60"  height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{Kelas}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="360" y="0" width="120" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{Jurusan}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="480" y="0" width="130" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{Jenis Pembayaran}]]></textFieldExpression>
            </textField>
            <textField isBlankWhenNull="true">
                <reportElement x="610" y="0" width="192" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Arial" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{Jumlah}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- ==================== PAGE FOOTER ==================== -->
    <pageFooter>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="401" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font fontName="Arial" size="8"/>
                </textElement>
                <text><![CDATA[Dicetak oleh Sistem Pembayaran SPP]]></text>
            </staticText>
            <textField evaluationTime="Report">
                <reportElement x="401" y="0" width="401" height="20"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Arial" size="8"/>
                </textElement>
                <textFieldExpression><![CDATA["Halaman " + $V{PAGE_NUMBER} + " dari " + $V{PAGE_COUNT}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

</jasperReport>
